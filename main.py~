import PySimpleGUI as sg

sg.theme('Default')
WIN_W = 30
WIN_H = 50

layout_main = [
    [sg.Text('Nomes dos papéis'), sg.InputText(size=(int(WIN_W/2),1)), sg.InputText(size=(int(WIN_W/2),1))],
    [sg.Text('Valores de compra'), sg.InputText(size=(int(WIN_W/2),1)), sg.InputText(size=(int(WIN_W/2),1))],
    [sg.Text('Aumentar a taxa %'), sg.InputText(size=(int(WIN_W/2),1))],
    [sg.Button('Configurações'), sg.Button('Limpar'), sg.Button('Salvar')],
    [sg.Text('1 papel atualizado em ')],
    [sg.Text('2 papel atualizado em ')],
    [sg.Text('Taxa atualizada em ')],
    [sg.Text('Última atualização')]
]


main = sg.Window('Alarme de cotações do BOVESPA', layout_main )

while True:
    evento, valores = main.read()
    if evento == sg.WIN_CLOSED:
        break
    
    
main.close()
